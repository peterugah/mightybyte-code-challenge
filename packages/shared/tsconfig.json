{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"rootDir": "./src",
		"composite": true,
		"declarationMap": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src/**/*"]
}
